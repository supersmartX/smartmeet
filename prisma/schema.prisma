// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// NextAuth.js Models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?  @db.Text

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userAgent    String?
  ipAddress    String?
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  verificationToken String? @unique
  verificationTokenExpires DateTime?
  resetToken        String? @unique
  resetTokenExpires DateTime?
  image         String?
  password      String?
  apiKey        String?
  allowedIps    String?   // Comma-separated list of allowed IPs
  lastUsedAt    DateTime? // Last time the API key was used
  preferredProvider String? @default("openai")
  preferredModel    String? @default("gpt-4o")
  failedLoginAttempts Int      @default(0)
  lockedUntil         DateTime?
  mfaEnabled          Boolean   @default(false)
  mfaSecret           String?
  mfaRecoveryCodes    String[]  @default([])
  role          UserRole  @default(MEMBER)
  plan          UserPlan  @default(FREE)
  meetingQuota  Int       @default(3) // Monthly quota for FREE users
  meetingsUsed  Int       @default(0) // Meetings used in current cycle
  accounts      Account[]
  sessions      Session[]
  meetings      Meeting[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  auditLogs     AuditLog[]
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  resource  String?
  details   String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
}

enum UserRole {
  ADMIN
  MEMBER
  VIEWER
}

enum UserPlan {
  FREE
  PRO
  ENTERPRISE
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application Models
model Meeting {
  id           String         @id @default(cuid())
  title        String
  date         DateTime       @default(now())
  duration     String?
  participants Int            @default(1)
  status       MeetingStatus  @default(PROCESSING)
  userId       String
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  transcripts  Transcript[]
  summary      Summary?
  actionItems  ActionItem[]
  code         String?
  projectDoc   String?
  testResults  String?
  audioUrl     String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

enum MeetingStatus {
  COMPLETED
  PROCESSING
  FAILED
}

model Transcript {
  id        String   @id @default(cuid())
  speaker   String
  time      String
  text      String
  meetingId String
  meeting   Meeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)
}

model Summary {
  id        String   @id @default(cuid())
  content   String
  meetingId String   @unique
  meeting   Meeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)
}

model ActionItem {
  id        String           @id @default(cuid())
  title     String
  status    ActionItemStatus @default(PENDING)
  meetingId String
  meeting   Meeting          @relation(fields: [meetingId], references: [id], onDelete: Cascade)
}

enum ActionItemStatus {
  PENDING
  COMPLETED
  IN_PROGRESS
  CANCELLED
}
