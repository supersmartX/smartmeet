generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "debian-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  ipAddress    String?
  userAgent    String?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                       String         @id @default(cuid())
  name                     String?
  email                    String?        @unique
  emailVerified            DateTime?
  verificationToken        String?        @unique
  image                    String?
  password                 String?
  apiKey                   String?
  role                     UserRole       @default(MEMBER)
  createdAt                DateTime       @default(now())
  updatedAt                DateTime       @updatedAt
  failedLoginAttempts      Int            @default(0)
  lockedUntil              DateTime?
  preferredModel           String?        @default("gpt-4o")
  preferredProvider        String?        @default("openai")
  mfaEnabled               Boolean        @default(false)
  mfaSecret                String?
  allowedIps               String?
  lastUsedAt               DateTime?
  mfaRecoveryCodes         String[]       @default([])
  meetingQuota             Int            @default(100)
  meetingsUsed             Int            @default(0)
  plan                     UserPlan       @default(FREE)
  resetToken               String?        @unique
  resetTokenExpires        DateTime?
  verificationTokenExpires DateTime?
  stripeCurrentPeriodEnd   DateTime?
  stripeCustomerId         String?        @unique
  stripePriceId            String?
  stripeSubscriptionId     String?        @unique
  tokensUsed               Int            @default(0)
  autoProcess              Boolean        @default(true)
  defaultLanguage          String?        @default("en")
  summaryLength            String?        @default("medium")
  summaryPersona           String?        @default("balanced")
  accounts                 Account[]
  auditLogs                AuditLog[]
  meetings                 Meeting[]
  notifications            Notification[]
  sessions                 Session[]
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  resource  String?
  details   String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Meeting {
  id             String         @id @default(cuid())
  title          String
  date           DateTime       @default(now())
  duration       String?
  participants   Int            @default(1)
  status         MeetingStatus  @default(PROCESSING)
  userId         String
  code           String?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  audioUrl       String?
  projectDoc     String?
  testResults    String?
  processingStep ProcessingStep @default(IDLE)
  isPinned       Boolean        @default(false)
  isFavorite     Boolean        @default(false)
  isTechnical    Boolean        @default(false)
  actionItems    ActionItem[]
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  summary        Summary?
  transcripts    Transcript[]

  @@index([userId])
}

model Transcript {
  id        String  @id @default(cuid())
  speaker   String
  time      String
  text      String
  confidence Float?
  meetingId String
  meeting   Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@index([meetingId])
}

model Summary {
  id        String  @id @default(cuid())
  content   String
  meetingId String  @unique
  meeting   Meeting @relation(fields: [meetingId], references: [id], onDelete: Cascade)
}

model ActionItem {
  id        String           @id @default(cuid())
  title     String
  meetingId String
  status    ActionItemStatus @default(PENDING)
  meeting   Meeting          @relation(fields: [meetingId], references: [id], onDelete: Cascade)

  @@index([meetingId])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  title     String
  message   String
  type      NotificationType @default(INFO)
  read      Boolean          @default(false)
  link      String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum UserRole {
  ADMIN
  MEMBER
  VIEWER
}

enum UserPlan {
  FREE
  PRO
  ENTERPRISE
}

enum MeetingStatus {
  COMPLETED
  PROCESSING
  FAILED
  PENDING
}

enum ProcessingStep {
  IDLE
  TRANSCRIPTION
  SUMMARIZATION
  PLANNING
  CODE_GENERATION
  TESTING
  COMPLETED
  FAILED
}

enum ActionItemStatus {
  PENDING
  COMPLETED
  IN_PROGRESS
  CANCELLED
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}
